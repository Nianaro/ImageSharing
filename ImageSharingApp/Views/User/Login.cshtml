@model ImageSharingApp.Models.LoginModel
@{
    Layout = "~/Views/MasterPage.cshtml";    
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">@Resources.Resource.Email</label>
        <div class="col-sm-5">
            <input name="email" type="email" class="form-control" id="inputEmail3" placeholder="@Resources.Resource.Email">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">@Resources.Resource.Password</label>
        <div class="col-sm-5">
            <input name="password" type="password" class="form-control" id="inputPassword3" placeholder="@Resources.Resource.Password">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">@Resources.Resource.Login</button>
            @Html.ActionLink(@Resources.Resource.Registration, "Registration", "User")
        </div>
    </div>
}